<mvc:View controllerName="com.ugl.ygpstest.YGpsTest.controller.View1" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
          xmlns:u="sap.ui.unified"
          xmlns:t="sap.ui.table"
          xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
          xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <l:VerticalLayout class="sapUiContentPadding" width="100%">
                            <Image id="imageView" src="{img>/photoUrl}" width="50%"/>
                            <u:FileUploader
                                    id="addPhoto"
                                    buttonOnly="true"
                                    buttonText="Add Photo"
                                    icon="sap-icon://add-photo"
                                    tooltip="Add Photo"
                                    change="onChange"/>
                            <t:Table
                                    id="metaTable"
                                    enableSelectAll="false"
                                    rows="{/PhotoMetadata}"
                                    selectionMode="Single"
                                    ariaLabelledBy="title">
                                <t:extension>
                                    <OverflowToolbar>
                                        <Title id="title" text="Photo Metadata"/>
                                    </OverflowToolbar>
                                </t:extension>
                                <t:columns>
                                    <t:Column>
                                        <Label text="Tag name"/>
                                        <t:template>
                                            <Text text="{TagName}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column>
                                        <Label text="Tag Value"/>
                                        <t:template>
                                            <Text text="{TagValue}"  wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                </t:columns>
                            </t:Table>
                            <!--                            <Button text="Get GPS" press="onPress"/>-->
                            <!--                            <Label text="GPS Accuracy" labelFor="accuracy"/>-->
                            <!--                            <Input id="accuracy" editable="false"/>-->
                            <!--                            <Label text="GPS Latitude" labelFor="latitude"/>-->
                            <!--                            <Input id="latitude" editable="false"/>-->
                            <!--                            <Label text="GPS Longitude" labelFor="longitude"/>-->
                            <!--                            <Input id="longitude" editable="false"/>-->
                        </l:VerticalLayout>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>